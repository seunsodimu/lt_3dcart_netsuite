{
    "name": "laguna/3dcart-netsuite-integration",
    "description": "3DCart to NetSuite integration with webhook support and manual upload",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^2.0",
        "phpoffice/phpspreadsheet": "^1.24",
        "sendgrid/sendgrid": "^8.0",
        "vlucas/phpdotenv": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Laguna\\Integration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laguna\\Integration\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "@php -r \"file_exists('config/credentials.php') || copy('config/credentials.example.php', 'config/credentials.php');\""
        ]
    }
}